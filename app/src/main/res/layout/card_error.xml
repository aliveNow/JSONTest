<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_error"
    style="@style/CardViewStyle"
    app:cardBackgroundColor="@color/errorBackgroundColor">

    <LinearLayout
        style="@style/LinearLayoutSectionContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_error"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_error_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_network_not_available"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_half_normal"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>